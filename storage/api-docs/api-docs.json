{
  "openapi": "3.0.3",
  "info": {
    "title": "OMPAY Wallet API",
    "description": "API RESTful pour le système de portefeuille OMPAY - Gestion des transactions et authentification",
    "version": "1.0.0",
    "contact": {
      "name": "OMPAY Support",
      "email": "support@ompay.sn"
    },
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Serveur de développement"
    },
    {
      "url": "https://api.ompay.sn/api",
      "description": "Serveur de production"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "Erreur de validation"
          },
          "errors": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "status_code": {
            "type": "integer",
            "example": 400
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Opération réussie"
          },
          "data": {
            "type": "object"
          },
          "status_code": {
            "type": "integer",
            "example": 200
          }
        }
      },
      "SendVerificationRequest": {
        "type": "object",
        "required": [
          "telephone"
        ],
        "properties": {
          "telephone": {
            "type": "string",
            "example": "771234567",
            "description": "Numéro de téléphone sénégalais (format: 77XXXXXXX)"
          }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "required": [
          "nom",
          "prenom",
          "telephone",
          "password",
          "password_confirmation",
          "otp",
          "cni",
          "sexe",
          "date_naissance"
        ],
        "properties": {
          "nom": {
            "type": "string",
            "maxLength": 255,
            "example": "Diop"
          },
          "prenom": {
            "type": "string",
            "maxLength": 255,
            "example": "Amadou"
          },
          "telephone": {
            "type": "string",
            "example": "771234567",
            "description": "Numéro de téléphone sénégalais (format: 77XXXXXXX)"
          },
          "password": {
            "type": "string",
            "format": "password",
            "minLength": 8,
            "example": "password123"
          },
          "password_confirmation": {
            "type": "string",
            "format": "password",
            "example": "password123",
            "description": "Confirmation du mot de passe (doit être identique)"
          },
          "otp": {
            "type": "string",
            "minLength": 6,
            "maxLength": 6,
            "example": "123456",
            "description": "Code OTP de 6 chiffres"
          },
          "cni": {
            "type": "string",
            "example": "AB123456789",
            "description": "Numéro CNI sénégalais (format: 2 lettres + 9 chiffres)"
          },
          "sexe": {
            "type": "string",
            "enum": [
              "M",
              "F"
            ],
            "example": "M"
          },
          "date_naissance": {
            "type": "string",
            "format": "date",
            "example": "1990-01-15"
          }
        }
      },
      "RegisterResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Inscription réussie"
          },
          "data": {
            "type": "object",
            "properties": {
              "user": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 1
                  },
                  "nom": {
                    "type": "string",
                    "example": "Diop"
                  },
                  "prenom": {
                    "type": "string",
                    "example": "Amadou"
                  },
                  "telephone": {
                    "type": "string",
                    "example": "771234567"
                  },
                  "cni": {
                    "type": "string",
                    "example": "AB123456789"
                  },
                  "sexe": {
                    "type": "string",
                    "example": "M"
                  },
                  "date_naissance": {
                    "type": "string",
                    "format": "date",
                    "example": "1990-01-15"
                  },
                  "created_at": {
                    "type": "string",
                    "format": "date-time"
                  }
                }
              },
              "token": {
                "type": "string",
                "example": "1|abc123def456"
              },
              "token_type": {
                "type": "string",
                "example": "Bearer"
              }
            }
          },
          "status_code": {
            "type": "integer",
            "example": 200
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": [
          "telephone",
          "password"
        ],
        "properties": {
          "telephone": {
            "type": "string",
            "example": "771234567",
            "description": "Numéro de téléphone sénégalais"
          },
          "password": {
            "type": "string",
            "format": "password",
            "example": "password123"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Connexion réussie"
          },
          "data": {
            "type": "object",
            "properties": {
              "user": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 1
                  },
                  "nom": {
                    "type": "string",
                    "example": "Diop"
                  },
                  "prenom": {
                    "type": "string",
                    "example": "Amadou"
                  },
                  "telephone": {
                    "type": "string",
                    "example": "771234567"
                  }
                }
              },
              "compte": {
                "type": "object",
                "nullable": true,
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 1
                  },
                  "numero_compte": {
                    "type": "string",
                    "example": "OMP001234"
                  },
                  "type": {
                    "type": "string",
                    "example": "courant"
                  },
                  "statut": {
                    "type": "string",
                    "example": "actif"
                  }
                }
              },
              "token": {
                "type": "string",
                "example": "1|abc123def456"
              },
              "token_type": {
                "type": "string",
                "example": "Bearer"
              }
            }
          },
          "status_code": {
            "type": "integer",
            "example": 200
          }
        }
      },
      "DepositRequest": {
        "type": "object",
        "required": [
          "amount"
        ],
        "properties": {
          "amount": {
            "type": "number",
            "format": "float",
            "minimum": 100,
            "maximum": 5000000,
            "example": 50000
          },
          "description": {
            "type": "string",
            "maxLength": 255,
            "example": "Dépôt via mobile"
          }
        }
      },
      "DepositResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Dépôt effectué avec succès"
          },
          "data": {
            "type": "object",
            "properties": {
              "transaction": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 1
                  },
                  "user_id": {
                    "type": "integer",
                    "example": 1
                  },
                  "compte_id": {
                    "type": "integer",
                    "example": 1
                  },
                  "type": {
                    "type": "string",
                    "example": "depot"
                  },
                  "montant": {
                    "type": "number",
                    "format": "float",
                    "example": 50000
                  },
                  "statut": {
                    "type": "string",
                    "example": "reussi"
                  },
                  "date_operation": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-11-13T21:20:00Z"
                  },
                  "description": {
                    "type": "string",
                    "example": "Dépôt via mobile"
                  },
                  "reference": {
                    "type": "string",
                    "example": "TXN202511132120001234"
                  }
                }
              },
              "reference": {
                "type": "string",
                "example": "TXN202511132120001234"
              }
            }
          },
          "status_code": {
            "type": "integer",
            "example": 200
          }
        }
      },
      "WithdrawRequest": {
        "type": "object",
        "required": [
          "amount"
        ],
        "properties": {
          "amount": {
            "type": "number",
            "format": "float",
            "minimum": 100,
            "maximum": 1000000,
            "example": 25000
          },
          "description": {
            "type": "string",
            "maxLength": 255,
            "example": "Retrait DAB"
          }
        }
      },
      "WithdrawResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Retrait effectué avec succès"
          },
          "data": {
            "type": "object",
            "properties": {
              "transaction": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 2
                  },
                  "user_id": {
                    "type": "integer",
                    "example": 1
                  },
                  "compte_id": {
                    "type": "integer",
                    "example": 1
                  },
                  "type": {
                    "type": "string",
                    "example": "retrait"
                  },
                  "montant": {
                    "type": "number",
                    "format": "float",
                    "example": 25000
                  },
                  "statut": {
                    "type": "string",
                    "example": "reussi"
                  },
                  "date_operation": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-11-13T21:20:00Z"
                  },
                  "description": {
                    "type": "string",
                    "example": "Retrait DAB"
                  },
                  "reference": {
                    "type": "string",
                    "example": "TXN202511132120001235"
                  }
                }
              },
              "reference": {
                "type": "string",
                "example": "TXN202511132120001235"
              }
            }
          },
          "status_code": {
            "type": "integer",
            "example": 200
          }
        }
      },
      "TransferRequest": {
        "type": "object",
        "required": [
          "recipient_telephone",
          "amount"
        ],
        "properties": {
          "recipient_telephone": {
            "type": "string",
            "example": "781234567",
            "description": "Numéro de téléphone du destinataire"
          },
          "amount": {
            "type": "number",
            "format": "float",
            "minimum": 100,
            "maximum": 1000000,
            "example": 15000
          },
          "description": {
            "type": "string",
            "maxLength": 255,
            "example": "Paiement facture"
          }
        }
      },
      "TransferResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Transfert effectué avec succès"
          },
          "data": {
            "type": "object",
            "properties": {
              "debit_transaction": {
                "type": "object",
                "description": "Transaction de débit du compte expéditeur",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 3
                  },
                  "user_id": {
                    "type": "integer",
                    "example": 1
                  },
                  "compte_id": {
                    "type": "integer",
                    "example": 1
                  },
                  "type": {
                    "type": "string",
                    "example": "transfert"
                  },
                  "montant": {
                    "type": "number",
                    "format": "float",
                    "example": 15000
                  },
                  "statut": {
                    "type": "string",
                    "example": "reussi"
                  },
                  "destinataire_id": {
                    "type": "integer",
                    "example": 2
                  },
                  "date_operation": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-11-13T21:20:00Z"
                  },
                  "description": {
                    "type": "string",
                    "example": "Paiement facture"
                  },
                  "reference": {
                    "type": "string",
                    "example": "TXN202511132120001236D"
                  }
                }
              },
              "credit_transaction": {
                "type": "object",
                "description": "Transaction de crédit du compte destinataire",
                "properties": {
                  "id": {
                    "type": "integer",
                    "example": 4
                  },
                  "user_id": {
                    "type": "integer",
                    "example": 2
                  },
                  "compte_id": {
                    "type": "integer",
                    "example": 2
                  },
                  "type": {
                    "type": "string",
                    "example": "transfert"
                  },
                  "montant": {
                    "type": "number",
                    "format": "float",
                    "example": 15000
                  },
                  "statut": {
                    "type": "string",
                    "example": "reussi"
                  },
                  "date_operation": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-11-13T21:20:00Z"
                  },
                  "description": {
                    "type": "string",
                    "example": "Paiement facture"
                  },
                  "reference": {
                    "type": "string",
                    "example": "TXN202511132120001236C"
                  }
                }
              },
              "reference": {
                "type": "string",
                "example": "TXN202511132120001236"
              }
            }
          },
          "status_code": {
            "type": "integer",
            "example": 200
          }
        }
      },
      "BalanceResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Solde récupéré avec succès"
          },
          "data": {
            "type": "object",
            "properties": {
              "compte_id": {
                "type": "integer",
                "example": 1
              },
              "numero_compte": {
                "type": "string",
                "example": "OMP001234"
              },
              "solde": {
                "type": "number",
                "format": "float",
                "example": 125000
              },
              "devise": {
                "type": "string",
                "example": "FCFA"
              },
              "date_consultation": {
                "type": "string",
                "format": "date-time",
                "example": "2025-11-13T21:20:00Z"
              }
            }
          },
          "status_code": {
            "type": "integer",
            "example": 200
          }
        }
      },
      "HistoryResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Historique récupéré avec succès"
          },
          "data": {
            "type": "object",
            "properties": {
              "compte_id": {
                "type": "integer",
                "example": 1
              },
              "numero_compte": {
                "type": "string",
                "example": "OMP001234"
              },
              "transactions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 1
                    },
                    "type": {
                      "type": "string",
                      "example": "depot"
                    },
                    "montant": {
                      "type": "number",
                      "format": "float",
                      "example": 50000
                    },
                    "statut": {
                      "type": "string",
                      "example": "reussi"
                    },
                    "date_operation": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2025-11-13T21:20:00Z"
                    },
                    "description": {
                      "type": "string",
                      "example": "Dépôt via mobile"
                    },
                    "reference": {
                      "type": "string",
                      "example": "TXN202511132120001234"
                    },
                    "user": {
                      "type": "object",
                      "nullable": true,
                      "properties": {
                        "nom": {
                          "type": "string",
                          "example": "Diop"
                        },
                        "prenom": {
                          "type": "string",
                          "example": "Amadou"
                        },
                        "telephone": {
                          "type": "string",
                          "example": "771234567"
                        }
                      }
                    }
                  }
                }
              },
              "total": {
                "type": "integer",
                "example": 5
              }
            }
          },
          "status_code": {
            "type": "integer",
            "example": 200
          }
        }
      }
    }
  },
  "paths": {
    "/ompay/send-verification": {
      "post": {
        "summary": "Envoyer un code de vérification OTP par SMS",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendVerificationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Code de vérification envoyé avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Erreur de validation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/ompay/register": {
      "post": {
        "summary": "Inscription d'un nouvel utilisateur OMPAY",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Inscription réussie",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterResponse"
                }
              }
            }
          },
          "400": {
            "description": "Erreur de validation ou OTP invalide",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/ompay/login": {
      "post": {
        "summary": "Connexion utilisateur OMPAY",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Connexion réussie",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
        "401": {
          "description": "Identifiants invalides",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Error"
              }
            }
          }
        }
      }
    },
    "/ompay/deposit": {
      "post": {
        "summary": "Effectuer un dépôt d'argent",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DepositRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Dépôt effectué avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DepositResponse"
                }
              }
            }
          },
          "400": {
            "description": "Erreur de validation ou montant invalide",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Non authentifié",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/ompay/withdraw": {
      "post": {
        "summary": "Effectuer un retrait d'argent",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WithdrawRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Retrait effectué avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WithdrawResponse"
                }
              }
            }
          },
          "400": {
            "description": "Solde insuffisant ou erreur de validation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Non authentifié",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/ompay/transfer": {
      "post": {
        "summary": "Effectuer un transfert d'argent",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TransferRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transfert effectué avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TransferResponse"
                }
              }
            }
          },
          "400": {
            "description": "Destinataire introuvable ou solde insuffisant",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Non authentifié",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/ompay/balance": {
      "get": {
        "summary": "Consulter le solde du compte",
        "security": [
          {
            "bearerAuth": []
